<div class="container"><h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
<div><%= check_box_tag 'task_completed', 'yes', true, class: "completed" %><%= "This task is completed" %>
<%else%>
<%= check_box_tag 'task_completed', 'yes', false %><%= "This task is not completed yet" %>
<%end%>
</div>
</div>
<br>
<br>
<div class = "link"><%= link_to "Back to list", tasks_path %></div>