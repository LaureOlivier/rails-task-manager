<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
<div class = "completed"><%= check_box_tag 'task_completed', 'yes', true %><%= "This task is completed" %>
<%else%>
<%= check_box_tag 'task_completed', 'yes', false %><%= "This task is not completed yet" %>
<%end%>
</div>
<br>
<br>
<div class = "link"><%= link_to "Back to list", tasks_path %></div>