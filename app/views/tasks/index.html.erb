<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
    <% if task.completed %>
        <%= check_box_tag 'task_completed', 'yes', true %> 
    <%else%>
        <%= check_box_tag 'task_not_completed', 'yes', false %>
    <% end %>
    <%= link_to task.title, task_path(task.id) %> - <%= link_to task_path(task.id),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                <% end %>
   </li>
  <% end %>
</ul>

<div class = "link"><i class="fa fa-plus"></i><%= link_to "Add a new task", tasks_new_path %></div>